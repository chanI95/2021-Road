<body>
    <header>
        <%- include('./partials/header.ejs') -%>
    </header>

    <!------------------------------------------ START---------------------------------->
    <div class="mbti-content">
        <div class="mbti-detail">
            <h1>Have you ever drank soju?</h1>
            <span>Let us know your experience! It's okay if you don't know soju</span>
        </div>
        <form id="mbti03" action="mbti_result" method="post">
            <div class="mbti-choice">
                <input type="radio" id="first-choice" class="radio-btn" name="third" value="7" onchange="setDisplay3()">
                <label for="first-choice" id="first" class="radio-img"></label>
                <input type="radio" id="second-choice" class="radio-btn" name="third" value="8" onchange="setDisplay3()">
                <label for="second-choice" id="second" class="radio-img"></label>
                <input type="radio" id="third-choice"  class="radio-btn" name="third" value="9" onchange="setDisplay3()">
                <label for="third-choice" id="third" class="radio-img"></label>
            </div>
            <div class="submit">
                <button type="submit" class="mbti-button" id="submitBtn">➤</button>
            </div>
        </form>
    </div>


    <!------------------------------------------- END ----------------------------------->

    <!-- footer -->
    <%- include('./partials/footer.ejs') -%>

